<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/complete_background"
    tools:context=".QuizActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/top_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Foreground Content Layer -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Question 7/20"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/question_indicator_textview"/>

       <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_timer"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/timer_indicator_textview"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text ="5:46"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:id="@+id/timer_indicator_textview"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:indicatorColor="@color/white"
        android:id="@+id/question_progress_indicator"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_textview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/questions_background"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="What is the purpose of cybersecurity?" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:background="@drawable/buttons_background"
                android:gravity="center_vertical"
                android:drawableEnd="@null"
                android:paddingHorizontal="18dp"
                android:paddingVertical="12dp"
                style="@style/GlobalTextViewStyle"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="23sp"
                tools:text="Ans A" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/GlobalTextViewStyle"
                android:layout_marginVertical="4dp"
                android:background="@drawable/buttons_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="18dp"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="23sp"
                tools:text="Ans B" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                style="@style/GlobalTextViewStyle"
                android:background="@drawable/buttons_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="18dp"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="23sp"
                tools:text="Ans C" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/GlobalTextViewStyle"
                android:layout_marginVertical="4dp"
                android:background="@drawable/buttons_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="18dp"
                android:paddingVertical="1dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="23sp"
                tools:text="Ans D" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="40dp"
                android:layout_gravity="start"
                style="@style/GlobalTextViewStyle"
                android:layout_marginVertical="4dp"
                android:background="@drawable/buttons_background"
                android:gravity="center"
                android:text="Back"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                style="@style/GlobalTextViewStyle"
                android:paddingHorizontal="40dp"
                android:layout_gravity="end"
                android:layout_marginVertical="4dp"
                android:background="@drawable/buttons_background"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />

            <Button
                tools:ignore="OnClick"
                android:id="@+id/btn_finish"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                style="@style/GlobalTextViewStyle"
                android:paddingHorizontal="20dp"
                android:layout_gravity="end"
                android:layout_marginVertical="4dp"
                android:background="@drawable/quizoptions_border"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="Finish Quiz"
                android:visibility="gone"
                android:textAllCaps="false"
                android:onClick="onFinishQuizClicked"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />


        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
    </ScrollView>
</FrameLayout>